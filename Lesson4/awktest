#!/bin/bash

echo -----------------------------------------1

awk -F : '{ print $4 }' /etc/passwd

echo -----------------------------------------2

awk -F : '/user/ { print $4 }' /etc/passwd

echo -----------------------------------------3

awk -F : '{ print $1,$NF }' /etc/passwd

echo -----------------------------------------4

awk -F : ' $3 > 500 ' /etc/passwd

echo -----------------------------------------5

awk -F : ' $NF ~/bash/' /etc/passwd

echo -----------------------------------------EOF
